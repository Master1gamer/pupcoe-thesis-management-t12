<div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
  <h1 class="h2">Classes</h1>
  <div class="btn-toolbar mb-2 mb-md-0">
    <div class="btn-group mr-2">
      <a href="/admin/class-create" class="btn btn-sm btn-outline-secondary">Add Class</a>
    </div>
  </div>
</div>
<div class="limiter">
  <div class="container-table100">
    <div class="wrap-table100">
      <div class="table100">
        <table>
          <thead>
            <tr class="table100-head">
              <th class="column1">ID</th>
              <th class="column2">Batch</th>
              <th class="column3">Section</th>
              <th class="column4">Adviser</th>
              <th class="column5"></th>
            </tr>
          </thead>
          <tbody>
            {{#each classes}}
            <tr>
              <th class="column1" scope="row">{{this.id}}</th>
              <td class="column2">{{this.batch}}</td>
              <td class="column3">{{this.section}}</td>
              <td class="column4">{{this.adviser_first_name}} {{this.adviser_last_name}}</td>
              <td class="column5"><a href='/admin/class/{{this.id}}'><center>Class Details</center></a></td>
            </tr>
            {{/each}}
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>