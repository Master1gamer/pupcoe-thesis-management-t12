<div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
  <h1 class="h3">Batch {{classData.batch}}-{{classData.section}} Students</h1>
</div>
<div class="limiter">
  <h1 class="h4">Adviser: {{classData.adviser_first_name}} {{classData.adviser_last_name}}</h1>
  <div class="container-table100">
    <div class="wrap-table100">
      <div class="table100">
        <table>
          <thead>
            <tr class="table100-head">
              <th class="column1">Student Number</th>
              <th class="column2">Name</th>
              <th class="column3">Email</th>
              <th class="column4">Phone</th>
              <th class="column5"></th>
            </tr>
          </thead>
          <tbody>
            {{#each classStudents}}
            <tr>
              <th class="column1" scope="row">{{this.student_number}}</th>
              <td class="column2">{{this.first_name}} {{this.last_name}}</td>
              <td class="column3">{{this.email}}</td>
              <td class="column4">{{this.phone}}</td>
              <td class="column5"><a href='/faculty/student/{{this.id}}'><center>Student Details</center></a></td>
            </tr>
            {{/each}}
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>